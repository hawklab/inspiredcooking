@page
@model recipes.Pages.Recipes.ListModel
@{
    ViewData["Title"] = "List";
}

<h1>Recipes</h1>

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" name="searchTerm" />
            <span class="input-group-btn">
                <button class="btn btn-default"></button>
                <i class="search"></i>
            </span>
        </div>
    </div>
</form>

<table class="table">
    @foreach(var recipe in Model.Recipes)
    {
        <tr>
            <td>@recipe.Name</td>
            <td>@recipe.Description</td>
            <td>@recipe.PrepTime</td>
            <td>@recipe.CookTime</td>
            <td>@recipe.Servings</td>
            <td>@recipe.Difficulty</td>
            <td>@recipe.Cuisine</td>
            <td>
                <a class="btn btn-lg" asp-page="./Detail" asp-route-recipeId="@recipe.Id"></a>
                <i class="zoom">Show</i>
            </td>
            <td>
                <a class="btn btn-lg" asp-page="./Edit" asp-route-recipeId="@recipe.Id"></a>
                <i class="edit">Edit</i>
            </td>
        </tr>
    }
</table>

<div>
    @Model.Message
</div>

