@page "{recipeId:int}/{ingredientId:int?}"
@model InspiredCooking.Pages.Ingredients.EditModel
@{
    ViewData["Title"] = "Edit";
}

<form method="post">

    <input type="hidden" asp-for="Ingredient.Id">
    <div class="form-group">
        <label asp-for="Ingredient.Name"></label>
        <input asp-for="Ingredient.Name" class="form-control" />
        <span class="text-danger" asp-validation-for="Ingredient.Name"></span>
    </div>

    <button type="submit" class="btn btn=primary">Save</button>
</form>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}

