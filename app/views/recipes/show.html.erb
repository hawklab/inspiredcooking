<div class="container">

  <!---Recipes Name--->
  <div>
  <h4 class="recipeTitle"><%= @recipe.name %></h4>
  <div class="divider"></div>
  </div>

  <!---Recipes Author--->
  <!--TODO -->
  <%# <div class="row authorInfo">
    <div class="col 2"><img class="authorImage circle responsive-img" src="https://cdn-images-1.medium.com/fit/c/200/200/1*fmti2-FyGmZK-DGAHfMlkg.jpeg"></div>
    <div class="author col 2"><p>by Carito</p></div>
  </div> %>
  <%# <h6 class="author"><img class="authorImage circle responsive-img" src="https://cdn-images-1.medium.com/fit/c/200/200/1*fmti2-FyGmZK-DGAHfMlkg.jpeg">By Carito</h4> %>

  <!---Recipes Description--->
  <h6 class="recipeDescription"><%= @recipe.description %></h6>
  <div class="divider"></div>

  <div class="recipeDetails row">
    <div class="col s6 m4 l2"><p><%= "Prep Time: " + @recipe.preptime %></p></div>
    <div class="col s6 m4 l2"><p><%= "Cook Time: " + @recipe.cooktime %></p></div>
    <div class="col s6 m4 l2"><p><%= "Cook Time: " + @recipe.cooktime %></p></div>
    <div class="col s6 m4 l2"><p><%= "Difficulty: " + "Easy" %></p></div>
    <div class="col s6 m4 l2"><p><%= "Cuisine: " + @recipe.cuisines.to_a.to_sentence %></p></div>
    <div class="col s6 m4 l2"><p><%= "Servings: " + @recipe.servings %></p></div>
  </div>

  <!---Recipes Photo--->
  <div class="carousel carousel-slider">
    <a class="carousel-item" href="#one!"><img src="https://lorempixel.com/800/400/food/1"></a>
    <a class="carousel-item" href="#two!"><img src="https://lorempixel.com/800/400/food/2"></a>
    <a class="carousel-item" href="#three!"><img src="https://lorempixel.com/800/400/food/3"></a>
    <a class="carousel-item" href="#four!"><img src="https://lorempixel.com/800/400/food/4"></a>
  </div>

  <!---Recipes Ingredientes--->
  <h5 class="ingredientsTitle">Ingredients</h5>
  <div class="divider"></div>
  <div class="ingredientsList">
    <table>
        <tbody>
          <% @recipe.steps.each do |step|%>
            <% step.ingredients.each do |ingredient|%>
              <tr>
                <td><%=ingredient["quantity"][0].to_s + " " +  ingredient["quantity"][1].to_s+ " of " + ingredient["id"] %></td>
              </tr>
            <% end unless step.ingredients.nil? %>
           <% end %>
        </tbody>
      </table>
  </div>

  <!---Buttons--->
  <div class="recipeActions right-align">
    <div class="row">
     <!---Share--->
    <!-- Modal Trigger -->
      <a class="waves-effect waves-light btn grey darken-4 rigth-align modal-trigger" href="#modal1"><i class="material-icons left">share</i>Share</a>

    <!---Make it--->
      <%= link_to recipe_step_path(@recipe, 1), class: "waves-effect waves-light btn grey darken-4 rigth-align" do %>
      <i class="material-icons left">local_dining</i>Make it
      <% end %>

    <!---Add to favorites--->
      <% if user_signed_in? && current_user.has_favorited?(@recipe)  %>
        <%= link_to favorite_recipe_path(@recipe), method: :delete, class: "waves-effect waves-light btn grey darken-4 rigth-align" do %>
          <i class="material-icons left">favorite</i>Remove from favorites
         <% end %>
      <% else %>
        <%= link_to favorite_recipe_path(@recipe), method: :post, class: "waves-effect waves-light btn grey darken-4 rigth-align" do %>
          <i class="material-icons left">favorite</i>Add to favorites
        <% end %>
      <% end %>
    </div>

    <!-- Modal Structure -->
    <div id="modal1" class="modal">
      <div class="modal-content left-align">
        <h4>Share Recipe</h4>
          <div class="row">
              <div class="col 8"><p>URL: <%= recipe_url %> </p></div>
              <div class="col 4"><a data-copy="<%= recipe_url %>" class="action-copy waves-effect waves-light btn grey darken-4 rigth-align"><i class="material-icons left">content_copy</i>Copy</a></div>
          </div>

      </div>
      <%# TODO%>
    <div class="modal-footer">
      <a href="#!" class="modal-close waves-effect waves-green btn-flat">Close</a>
    </div>


  </div>


</div>





