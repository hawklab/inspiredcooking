<div class="container">
    <!---TODO--->
    <h4 class="stepsTitle">Step 1: Prepare Dough</h4>
    <div class="divider"></div>

    <% unless @step.ingredients.nil? %>
      <!---Step Ingredients--->
      <div class="row stepIngredients"></div>
      <h5 class="ingredientsTitle">Ingredients</h5>
      <p class="guideText">For this step you'll using the next ingredients:</p>

      <div>
        <table class="ingredientsTable">
            <tbody>
              <% @step.ingredients.each do |ingredient|%>
              <tr>
                <td><%=ingredient["quantity"][0].to_s + " " +  ingredient["quantity"][1].to_s+ " of " + ingredient["id"] %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
      </div>
    <% end %>


    <!---Step Instructions--->
    <div class="row stepInstructions">
      <h5 class="InstructionsTitle">Instructions</h5>
      <p class="typeBody2"><%= @step.instructions %></p>
      <!---Step Photo--->
      <img class="materialboxed stepImage responsive-img" width="650" src="https://argentina-travel-blog.sayhueque.com/wp-content/uploads/2015/09/papa.jpg">
    </div>

<!---Buttons--->
  <div class="right-align">
    <% if @step_number < @recipe.steps.count%>
    <button class="stepActions waves-effect waves-light btn grey darken-4">
        <%= link_to recipe_step_path(@recipe, @step_number +1 ) do %>
        <i class="material-icons left">check</i>Done
        <% end %>
    </button>
    <% end %>
    <p class="guideText">And show me next step!</p>

    <% if @step_number > 1%>
    <button class="stepActions waves-effect waves-light btn grey darken-4">
        <%= link_to recipe_step_path(@recipe, @step_number -1 ) do %>
        <i class="material-icons left">arrow_back</i>Previous Step
        <% end %>
    </button>
    <% end %>

    <% if @step_number == 1%>
    <button class="stepActions waves-effect waves-light btn grey darken-4">
        <%= link_to recipe_path(@recipe) do %>
        <i class="material-icons left">arrow_back</i>Back to recipe
        <% end %>
    </button>
    <% end %>
  </div>
</div>



