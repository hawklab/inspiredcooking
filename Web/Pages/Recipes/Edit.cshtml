@page "{recipeId:int?}"
@model InspiredCooking.Pages.Recipes.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Editing @Model.Recipe.Name</h1>

<form method="post">

    <input type="hidden" asp-for="Recipe.Id">
    <div class="form-group">
        <label asp-for="Recipe.Name"></label>
        <input asp-for="Recipe.Name" class="form-control" />
        <span class="text-danger" asp-validation-for="Recipe.Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Recipe.Description"></label>
        <input asp-for="Recipe.Description" class="form-control" />
        <span class="text-danger" asp-validation-for="Recipe.Description"></span>
    </div>
    <div class="form-group">
        <label asp-for="Recipe.Ingredients"></label>
        <input asp-for="Recipe.Ingredients" class="form-control" />
        <span class="text-danger" asp-validation-for="Recipe.Ingredients"></span>
    </div>
    <div class="form-group">
        <label asp-for="Recipe.PrepTime"></label>
        <input asp-for="Recipe.PrepTime" class="form-control" />
        <span class="text-danger" asp-validation-for="Recipe.PrepTime"></span>
    </div>
    <div class="form-group">
        <label asp-for="Recipe.CookTime"></label>
        <input asp-for="Recipe.CookTime" class="form-control" />
        <span class="text-danger" asp-validation-for="Recipe.CookTime"></span>
    </div>
    <div class="form-group">
        <label asp-for="Recipe.Servings"></label>
        <input asp-for="Recipe.Servings" class="form-control" />
        <span class="text-danger" asp-validation-for="Recipe.Servings"></span>
    </div>
    <div class="form-group">
        <label asp-for="Recipe.Difficulty"></label>
        <input asp-for="Recipe.Difficulty" class="form-control" />
        <span class="text-danger" asp-validation-for="Recipe.Difficulty"></span>
    </div>
    <div class="form-group">
        <label asp-for="Recipe.Cuisine"></label>
        <select asp-for="Recipe.Cuisine"
                asp-items="@Model.Cuisines">
        </select>
        <span class="text-danger" asp-validation-for="Recipe.Cuisine"></span>
    </div>

    <button type="submit" class="btn btn=primary">Save</button>

</form>

<component type="typeof(InspiredCooking.Web.Components.Counter)" param-InitialValue="0" render-mode="Server" />


@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
    <script src="/_framework/blazor.server.js"></script>
}
