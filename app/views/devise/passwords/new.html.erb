<div class="container">
<div>
<!---Title--->
  <div>
    <h4>Forgot your password?</h4>
  </div>
</div>
<div class="row">
  <!-- Form Forgot your passport--->
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <!-- Error Messages--->
    <div class="row">
        <%= render "devise/shared/error_messages", resource: resource %>
    </div>
    <!--Email Input--->
    <div class="row">
      <div class="input-field col s12 m6 l6">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    </div>
    <!--Button--->
    <button class="waves-effect waves-light btn grey darken-4 rigth-align" type="submit"><i class="material-icons left"></i>Send me reset password instructions</button>
  <% end %>

  <%= render "devise/shared/links" %>

  </div>

</div>
